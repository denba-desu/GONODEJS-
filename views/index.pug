doctype html
html
	head
		title iTutor
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='assets/css/main.css')
		link(rel='stylesheet', href='assets/css/ie8.css')

	body

		section(id='header')
			header
				img(src='images/logo.png' alt="")
			nav(id='nav')
				ul
					li
						a(href='/' class="active") Current Services
						|
						|
					li
						a(href='service_requests') Service Requests
						|
						|
					li
						a(href='history') History
						|
						|
					li
						a(href='profile') Profile
						|
						|
					li
						a(href='account_settings') Account Settings
						|
						|
					li
						a(href='') Log-out

			footer
				ul(class='icons')
					li
						a(href='#' class='icon fa-twitter')
						span(class='label') Twitter
					li
						a(href='#' class='icon fa-facebook')
						span(class='label') Facebook
					li
						a(href='#' class='icon fa-instagram')
						span(class='label') Instagram
					li
						a(href='#' class='icon fa-github')
						span(class='label') Github
					li
						a(href='#' class='icon fa-envelope')
						span(class='label') Email

		div(id='wrapper')
			div(id='main')
				section(id='one')
					div(class='container')
						header(class='major')
							h2= message
						table
							tr
									th= 'Request ID'
									th= 'Specialization ID'
									th= 'Customer ID'
									th= 'Scheduled Time'
									th=	'Scheduled Day'
									th= 'Status'
									th= 'Payment'

							for currentServices in currentCustomerList
								tr
									td= currentServices.request_id
									td= currentServices.id_specialization
									td= currentServices.id_customer
									td= currentServices.scheduled_time
									td= currentServices.scheduled_day
									td= currentServices.status
									td= currentServices.isPaid
